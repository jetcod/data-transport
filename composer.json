{
    "name": "jetcod/data-transport",
    "description": "Efficient PHP Data Transport with DTOs",
    "type": "library",
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpunit/phpunit": "^9.6",
        "fakerphp/faker": "^1.21"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jetcod\\DataTransport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jetcod\\DataTransport\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Hamid Ghorashi",
            "email": "h.ghorashi@gmail.com"
        }
    ],
    "scripts": {
        "phpcs-fix": "php-cs-fixer fix ",
        "phpstan": "phpstan analyse --memory-limit=-1 src/",
        "test": "./vendor/bin/phpunit --testdox "
    }
}
